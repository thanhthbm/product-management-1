extends ../../layouts/default.pug

block main
	.container.py-4
		.card.shadow-sm
			.card-body
				.row
					// Product Image Column
					.col-md-4.mb-4.mb-md-0
						if (product.thumbnail)
							.product-image-container.text-center.mb-3
								img.img-fluid.rounded.shadow-sm(
									src=product.thumbnail
									alt=product.title
									style='max-height: 300px; object-fit: contain;'
								)
							.d-flex.justify-content-center
								a.btn.btn-outline-primary.btn-sm(
									href=`/${prefixAdmin}/products/edit/${product.id}`
								)
									i.fas.fa-edit.me-1
									| Chỉnh sửa

					// Product Details Column
					.col-md-8
						if (product.title)
							h2.product-title.border-bottom.pb-2.mb-3 #{product.title}

						.row.mb-4
							if (product.price)
								.col-md-4.mb-3.mb-md-0
									.card.h-100.bg-light
										.card-body.text-center
											h6.text-muted Giá
											h3.text-primary.mb-0 #{product.price}$

							if (product.discountPercentage)
								.col-md-4.mb-3.mb-md-0
									.card.h-100.bg-light
										.card-body.text-center
											h6.text-muted Giảm giá
											h3.text-success.mb-0 #{product.discountPercentage}%

							if (product.stock)
								.col-md-4.mb-3.mb-md-0
									.card.h-100.bg-light
										.card-body.text-center
											h6.text-muted Còn lại
											h3.text-dark.mb-0 #{product.stock}

						.row.mb-4
							if (product.status)
								.col-md-6.mb-3.mb-md-0
									.d-flex.align-items-center
										span.me-2 Trạng thái:
										if (product.status === 'active')
											span.badge.bg-success.py-2.px-3.rounded-pill Hoạt động
										else
											span.badge.bg-danger.py-2.px-3.rounded-pill Dừng hoạt động

							if (product.position)
								.col-md-6.mb-3.mb-md-0
									.d-flex.align-items-center
										span.me-2 Vị trí:
										span.badge.bg-info.py-2.px-3.rounded-pill #{product.position}

						if (product.description)
							.mt-4
								h5.border-bottom.pb-2 Mô tả sản phẩm
								p.product-description.mt-3 #{product.description}

	script(src='/admin/js/product.js')
